<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <include
        layout="@layout/layout_app_bar"
        android:id="@+id/setting_toolbar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setProfileImage"
        android:layout_below="@+id/setting_toolbar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="10dp"
        app:civ_border_color="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/setUserID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setProfileImage"
        android:inputType="textMultiLine"
        android:hint="user ID"
        android:textAlignment="center"
        android:drawableStart="@drawable/edit_profile"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/inputs"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp">
    </EditText>

    <EditText
        android:id="@+id/setFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setUserID"
        android:inputType="textMultiLine"
        android:hint="Full Name"
        android:textAlignment="center"
        android:drawableStart="@drawable/edit_profile"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/inputs"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp">
    </EditText>

    <Button
        android:id="@+id/updateSettingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setFullName"
        android:inputType="textMultiLine"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:background="@drawable/button"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp">
    </Button>

</RelativeLayout>